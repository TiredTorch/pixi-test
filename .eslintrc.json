{
    "root": true,
    "ignorePatterns": ["!**/*"],
    "plugins": ["@nx", "prettier"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx"],
            "extends": ["plugin:@nx/typescript"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "extends": ["plugin:@nx/javascript"],
            "rules": {}
        }
    ],
    "extends": ["plugin:@nx/react"],
    "rules": {
        "prettier/prettier": ["error"]
    }
}
